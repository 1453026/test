                    .col-xs-3
                      i.fa.fa-group.fa-5x
                    .col-xs-9.text-right
                      .huge 69
                      div Users
                a(href='/admin/user_management')
                  .panel-footer
                    span.pull-left View Details
                    span.pull-right
                      i.fa.fa-arrow-circle-right
                    .clearfix
          .row
            .col-lg-12.col-md-12.col-sm-12.col-xs-12
              .panel.panel-default
                .panel-heading
                  h3.panel-title
                    i.fa.fa-bar-chart-o.fa-fw

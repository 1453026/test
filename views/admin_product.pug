                  button.btn.btn-default(type='button') Delete
              tr
                td 1
                td
                  a.thumbnail(href='#')
                    img(src='/images/collections/running/air-zoom-all-out-flyknit-running-shoe-small.jpg', alt='')
                td Air zoom all out flyknit running shoe
                td Running
                td $100
                td 14
                td Active
                td
                  button.btn.btn-default(type='button') Edit
                td
                  button.btn.btn-default(type='button') Delete
              tr
                td 1
                td
                  a.thumbnail(href='#')
                    img(src='/images/collections/running/free-rn-flyknit-running-shoe-small.jpg', alt='')
                td Free rn flyknit running shoe
                td Running
                td $100
                td 14
                td Active
                td
                  button.btn.btn-default(type='button') Edit
                td
                  button.btn.btn-default(type='button') Delete
